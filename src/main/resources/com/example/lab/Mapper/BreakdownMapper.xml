<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.lab.Mapper.BreakdownMapper">
    <insert id="add" parameterType="com.example.lab.Entity.Breakdown" statementType="CALLABLE">
        {call insert_breakdown_equipment(
        #{equipmentId},#{applyReason,mode=IN},#{applyPerson,mode=IN},#{num,mode=IN})}
    </insert>
<!--    获取损坏的设备-->
    <select id="get"  statementType="CALLABLE" resultType="com.example.lab.Entity.Breakdown">
        {call select_breakdown_equipment()}
    </select>

    <select id="getById" resultType="com.example.lab.Entity.Breakdown">
        select * from breakdown where breakdown_id = #{id}
    </select>

    <update id="update" statementType="CALLABLE" parameterType="com.example.lab.Entity.Breakdown">
        {call upadte_breakdown_equipment(#{breakdownId}, #{equipmentId}, #{applyReason}, #{applyPerson}, #{num})}
    </update>

    <select id="getByUserId" resultType="com.example.lab.Entity.Breakdown">
        select * from breakdown where apply_person= #{id}
    </select>

</mapper>